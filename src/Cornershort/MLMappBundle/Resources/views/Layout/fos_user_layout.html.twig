{% extends "CornershortMLMappBundle:Layout:base.html.twig" %}

{% set body_class = 'login' %}

{% block page_css %}
<link href="{{ asset('bundles/cornershortmlmapp/assets/pages/css/login.css')}}" rel="stylesheet" type="text/css"/>
{% endblock page_css %}

{% block page_js %}
<script type="text/javascript" src="{{ asset('bundles/cornershortmlmapp/assets/pages/scripts/login.js')}}"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock page_js %}

{% block layout_js %}
<script type="text/javascript">
    jQuery(document).ready(function () {
        Login.init();
    });
</script>
{% endblock layout_js %}

{% block body %}


    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div>
        <div class="menu-toggler sidebar-toggler">
        </div>

        <div class="logo">
            Cornershort
        </div>

        <div class="content">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
        <div class="copyright">
            {{ "now"|date('Y') }} &copy;  CornerShort.com MLM Portal {{ app_version }}
        </div>
    </div>
{% endblock body %}
